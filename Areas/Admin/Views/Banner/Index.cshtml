 @model List<TBSTech.Models.Banner>
 <!-- Content Wrapper. Contains page content -->
 
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Banner</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Banner</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      
      <!-- Default box -->
      @foreach (var item in Model)
      {
         
     
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Banner</h3>
           @if(@item == null)
          {
            <p> There is no item in Course
              Please add Course
            </p>
          }
          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
              <i class="fas fa-minus"></i></button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fas fa-times"></i></button>
          </div>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                     
                      
                      <th style="width: 30%">
                          Banner Image
                      </th>
                     
                      
                  </tr>
              </thead>
              <tbody>
                  <tr>
                   
                      <td>
                          <ul class="list-inline">
                              <li class="list-inline-item">
                                  <img alt="Avatar" class="table-avatar" src="~/BannerVideo/@item.ImageUrl">
                              </li>
                          
                          </ul>
                      </td>
              
                      
                      <td class="project-actions text-right">
                          <a class="btn btn-primary btn-sm" href="#">
                              <i class="fas fa-folder">
                              </i>
                              View
                          </a>
                          <a class="btn btn-info btn-sm" asp-controller="Banner" asp-action="Update" asp-route-id="@item.Id" >
                              <i class="fas fa-pencil-alt">
                              </i>
                              Edit
                          </a>
                         <a class="btn btn-danger btn-sm" asp-controller="Banner" asp-action="Delete" asp-route-id="@item.Id" >

                              <i class="fas fa-trash">
                              </i>
                              Delete
                          </a>
                      </td>
                  </tr>
                  
              </tbody>
          </table>
        </div>
   
      </div>
      
      }
    </section>
    <!-- /.content -->
  
  <!-- /.content-wrapper -->