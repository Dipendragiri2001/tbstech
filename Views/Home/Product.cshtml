@{
    ViewData["Title"] = "Products";
}

@model List<TBSTech.Models.Product>


        <section class="service-area pt-100 pb-70">
            <div class="container">
                <div class="scetion-title text-center">
                    <span>Our Products</span>
                    <h2>We Provide various Products.</h2>
                    <p>
        Currently the product listed below are available with us.                     </p>
                </div>
                <div>
                    <div class="row pt-45">

                @foreach (var item in Model)
                
                {
                    
                
                
                    <div class="col-lg-4 col-sm-6">
                        <div class="service-card">
                                <img src="~/ProductImages/@item.ImageUrl" alt="Images" height="200px">
                            
                            
                                <h4>@item.ProductName</h4>
                            
                            <p>
                                @item.ShortDescription
                            </p>
                            <a asp-action="ProductDetail" asp-controller="Home" asp-route-id="@item.Id" ><div class="default-btn">See More</div></a>
                        </div>
                    </div>
                
                }
                 </div>
              

                    
        </section>
       


        