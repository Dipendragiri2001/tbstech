 @model List<TBSTech.Models.Course>
  @{
    var N=0;
}
 <!-- Content Wrapper. Contains page content -->

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Course</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Course Time</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
<div class="card">
        <div class="card-header">
          <h3 class="card-title">Course Time</h3>
             <a asp-controller="Course" asp-action="NewCourseTime" style="background-color:#007bff;text-align:center;float:right;color:white;width:150px;border-radius:20px;cursor:pointer;padding:10px;">Add Course</a>

        </div>
        <div class="card-body p-0">
          <table class="table table-striped projects">
              <thead>
                  <tr>
                      <th style="width: 1%">
                         #
                      </th>
                      <th style="width: 20%">
                          Name
                      </th>
                      <th style="width: 60%;">
                        Course Start Date
                      </th>
                    
                      <th style="width: 19%">
                      </th>
                  </tr>
              </thead>
      <!-- Default box -->
      @foreach (var item in Model)
      {
          N++;
      
      
              <tbody>
                  <tr>
                      <td>
                          @N
                      </td>
                      <td>
                              @item.CourseName
                          <br/>
                      </td>
                      <td  style="text-align:justify;">
                          <small>
                              @item.CourseStartDate
                          </small>
                      </td>
                      <td>
                          <a class="btn btn-info btn-sm" asp-controller="Course" asp-action="CourseTime" asp-route-id="@item.Id" style="margin-bottom: 5px;border-radius:0;">
                              
                             <b>-</b> Show Course Time
                          </a>
                      </td>
                       <td>
                          <a class="btn btn-info btn-sm" asp-controller="Course" asp-action="NewCourseTime" asp-route-id="@item.Id" style="margin-bottom: 5px;border-radius:0;">
                              
                             <b>-</b> Add Course Time
                          </a>
                      </td>
                  </tr>
                  
              </tbody>
        
      
      }
        </table>
        </div>
   
      </div>
    </section>
    <!-- /.content -->

  <!-- /.content-wrapper -->