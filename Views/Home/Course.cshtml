 @model TBSTech.Models.Course

@{
    ViewData["Title"] = "Course";
}
<div class="inner-banner inner-bg1">
            <div class="container">
                <div class="inner-title text-center">
                    <h3>Course Details</h3>
                    <ul>
                        <li>
                            <a>Courses</a>
                        </li>
                        <li>
                            <i class='bx bxs-chevrons-right'></i>
                        </li>
                        <li>Course Details</li>
                    </ul>
                </div>
            </div>
        </div>
<section class="service-area pt-100 pb-70">
            <div class="container">
                <div class="scetion-title text-center">
                    <span>Course Detail</span>
                    <h2>Apply Here</h2>
                    <p>
Here is the full detail of the service you just clicked.                    </p>
                </div>
            </div>
            <div class="container">
            <div class="course">
                <div class="course-detail">
                    <h1>@Model.CourseName</h1>
                    <small><b>Date</b>: @Model.CourseStartDate.ToString("MMMM dd, yyyy")</small><br/>
                                          <small><b>Morning</b>: @Model.Time1</small> |
                                          <small><b>Afternoon</b>: @Model.Time2</small> |
                                          <small><b>Evening</b>: @Model.Time3</small>

                  
                    

                    <p>@Html.Raw(Model.CourseDescription)</p>  
                    <a href="#popup1"><div class="default-btn">Apply Now</div></a>
                </div>
                </div>
                <div id="popup1" class="overlay">
	<div class="popup">
		<a class="close" href="#">&times;</a>
		<div class="content">
			<div class="contact-wrap pt-45">
                   <div class="contact-wrap-form">
                       
                        <form method="POST" asp-controller="Home" asp-action="Contact">
                            <div class="row">
                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="firstName" id="firstName" class="form-control" required data-error="Please enter your name" placeholder="Name">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        <input type="email" name="email" id="email" class="form-control" required data-error="Please enter your email" placeholder="Your Email">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="phonenumber" id="phonenumber" required data-error="Please enter your number" class="form-control" placeholder="Your Phone">
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                               <div class="col-lg-6 col-sm-6">
                                    <div class="form-group">
                                        <input type="text" name="courses" id="courses" required class="form-control" placeholder="Course: @Model.CourseName" value="@Model.CourseName"readonly>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <textarea name="message" class="form-control" id="message" cols="30" rows="8" required data-error="Write your message" placeholder="Your Message"></textarea>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>

                                <div class="col-lg-12 col-md-12 text-center">
                                    <button type="submit" class="default-btn page-btn text-center">
                                        Apply Now
                                    </button>
                                    <div id="msgSubmit" class="h3 text-center hidden"></div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </form>
                   </div>
                </div>
		</div>
	</div>
</div>
            </div>
</section>
